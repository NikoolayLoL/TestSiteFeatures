
@model Category

@section title {
    @if (Model != null)
    {
        <h3>Category: @Model.Name</h3>
    }
}

@* <form method="post" action="/categories/edit">

</form> *@

<form method="post" asp-asp-controller="categories" asp-action="edit">
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-action"/>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-action" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
        <div class="col-6">

        </div>
    </div>
</form>