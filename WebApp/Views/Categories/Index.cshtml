
@model List<Category>

@section title {
    <h1>Catetogries View</h1>
}

<p>
    New Controller deployed successfully!
</p>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.Description
                    </td>
                    <td>
                        @* <a class="btn btn-link" href="@($"/categories/edit/{category.CategoryID}")">Edit</a> *@
                        <a class="btn btn-link" asp-controller="categories" asp-action="edit" 
                            asp-route-id="@category.CategoryID">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


